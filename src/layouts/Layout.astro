---
import "@fontsource/inter";
import "@fontsource/inter/500.css";
import "@fontsource/inter/600.css";
import "@fontsource/inter/700.css";
import "@fontsource/inter/800.css";
import "@fontsource/inter/900.css";
import { SEO } from "astro-seo";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <SEO
      title={title}
      description="Filmingo - Experience the joy of watching movies together online with Filmingo. Stream and enjoy synchronized movie viewing with friends from anywhere."
      charset="UTF-8"
      openGraph={{
        basic: {
          title: `${title} | Filmingo`,
          type: "website",
          image:
            "https://res.cloudinary.com/davkfrmah/image/upload/v1686146984/Filmingo/temp_film_bvuced.jpg",
          url: "https://filmingo.akilesh.in",
        },
        optional: {
          description:
            "Filmingo - Experience the joy of watching movies together online with Filmingo. Stream and enjoy synchronized movie viewing with friends from anywhere.",
          determiner: "the",
          locale: "en_US",
          localeAlternate: ["en_US", "en_GB", "en_IN"],
          siteName: "Filmingo",
        },
        image: {
          url: "https://res.cloudinary.com/davkfrmah/image/upload/v1686146984/Filmingo/temp_film_bvuced.jpg",
          alt: "Filmingo Logo",
          width: 1200,
          height: 630,
        },
      }}
      twitter={{
        title: `${title} | Filmingo`,
        site: "@akilesh_io",
        creator: "@akilesh_io",
        description:
          "Filmingo - Experience the joy of watching movies together online with Filmingo. Stream and enjoy synchronized movie viewing with friends from anywhere.",
        image:
          "https://res.cloudinary.com/davkfrmah/image/upload/v1684239381/Filmingo/flamingo_logo.png",
        card: "summary_large_image",
        imageAlt: "Filmingo Logo",
      }}
      extend={{
        link: [
          {
            rel: "icon",
            type: "image/png",
            href: "https://res.cloudinary.com/davkfrmah/image/upload/v1684239381/Filmingo/flamingo_logo.png",
          },
        ],
        meta: [
          {
            name: "linkedin:title",
            content: "Filmingo",
          },
          {
            name: "linkedin:site",
            content: "@akilesh-io",
          },
          {
            name: "linkedin:creator",
            content: "@akilesh-io",
          },
          {
            name: "linkedin:card",
            content: "summary_large_image",
          },
          {
            name: "linkedin:description",
            content:
              "Filmingo - Experience the joy of watching movies together online with Filmingo. Stream and enjoy synchronized movie viewing with friends from anywhere.",
          },
          {
            name: "linkedin:image",
            content:
              "https://res.cloudinary.com/davkfrmah/image/upload/v1684239381/Filmingo/flamingo_logo.png",
          },
          {
            name: "linkedin:imageAlt",
            content: "Filmingo Logo",
          },
        ],
      }}
    />
